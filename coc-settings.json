{
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "javascript",
    "json",
    "typescriptreact",
    "html",
    "python",
    "elm",
    "yaml",
    "yml",
    "md",
    "MD",
    "scss"
  ],
  "coc.preferences.formatOnSave": [
    "yml"
  ],
  "coc.preferences.promptInput": false,
  "prettier.requireConfig": true,
  "python.jediEnabled": false,
  "python.venvFolders": ["envs", ".pyenv", ".direnv", "venv"],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--show-column-numbers",
    "--strict"
  ],
  "python.formatting.provider": "pyink",
  "python.linting.pylintEnabled": false,
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmPath": "./node_modules/.bin/elm",
        "elmFormatPath": "./node_modules/.bin/elm-format",
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "yank.highlight.enable": false,
  "typescript.preferences.useAliasesForRenames": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "suggest.noselect": true,
  "suggest.enablePreselect": true,
  "eslint.autoFixOnSave": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "tsserver.useLocalTsdk": true,
  "tsserver.tsdk": "${workspaceFolder}/node_modules/typescript/lib",
  "typescript.autoClosingTags": false
}
